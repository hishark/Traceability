<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".information_reporting.InformationReportingActivity">


    <TextView
        android:id="@+id/textView_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入上报的信息" />

    <EditText
        android:id="@+id/info_reporting_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_1"

        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/info_reporting_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_2"
        android:layout_centerVertical="true"
        android:layout_marginTop="1dp"
        android:background="@android:color/holo_green_light"
        android:text="选择时间"
        android:textColor="@color/mdtp_background_color" />

    <TextView
        android:id="@+id/textView_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_reporting_text"

        android:layout_centerVertical="true"
        android:layout_marginTop="13dp"
        android:text="请选择上述信息的关联时间" />

    <View
        android:id="@+id/divider_report_info"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/info_reporting_date"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/info_reporting_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_reporting_date"
        android:layout_centerVertical="true"
        android:layout_marginTop="29dp"
        android:background="@android:color/holo_blue_dark"
        android:text="提交信息"
        android:textColor="@color/mdtp_background_color" />

    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/info_reporting_btn"
        android:background="?android:attr/listDivider" />


    <Button
        android:id="@+id/info_reporting_to_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_1"
        android:layout_centerVertical="true"
        android:layout_marginTop="83dp"
        android:background="@android:color/holo_blue_dark"
        android:text="提交信息到服务器"
        android:textColor="@color/mdtp_background_color" />


</RelativeLayout>